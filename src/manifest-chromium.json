{
	"manifest_version": 3,
	"name": "Chartarrr!",
	"description": "Assisting in exploratory testing on the web.",
	"version": "0.0.1",
	"icons": {
		"48": "icons/icon.png",
		"96": "icons/icon@2x.png"
	},

	"permissions": [
		"activeTab",
		"alarms",
		"storage",
		"tabs"
	],

	"host_permissions": [
        "<all_urls>"
    ],

	"background": {
		"service_worker": "js/background.js"
	},

	"action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"64": "icons/icon-64.png"
		},
		"default_popup": "popup.html",
		"default_title": "Chartarrr!"
	}
}
